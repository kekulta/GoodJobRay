<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DialView">
        <attr name="fanColor1" format="color" />
        <attr name="fanColor2" format="color" />
        <attr name="fanColor3" format="color" />
    </declare-styleable>

    <declare-styleable name="CardView">
        <attr name="icon_to_right" format="boolean" />
        <attr name="iconRatio" format="float" />
        <attr name="center_text" format="string" />
        <attr name="icon" format="reference" />
        <attr name="text_size" format="float" />
        <attr name="top_text" format="string" />
        <attr name="bottom_text" format="string" />
        <attr name="corner_radius" format="dimension" />
        <attr name="color_start" format="color" />
        <attr name="color_end" format="color" />
        <attr name="square_borders" format="boolean" />
        <attr name="auto_ratio" format="boolean" />
        <attr name="ratio" format="float" />
        <attr name="gradient_start_x" format="float" />
        <attr name="gradient_start_y" format="float" />
        <attr name="gradient_end_x" format="float" />
        <attr name="gradient_end_y" format="float" />

    </declare-styleable>

    <declare-styleable name="ProfileView">
        <attr name="corner_radius" />
        <attr name="color_start" />
        <attr name="color_end" />
        <attr name="text" format="string" />
        <attr name="image" format="reference" />
        <attr name="is_underlined" format="boolean" />
        <attr name="first_underlined_index" format="integer" />
        <attr name="last_underlined_index" format="integer" />
    </declare-styleable>

    <declare-styleable name="AchieveBar">
        <attr name="corner_radius" />
        <attr name="color_start" />
        <attr name="color_end" />
        <attr name="position" format="integer" />
        <attr name="title" format="string" />
        <attr name="stage_color" format="color" />
        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_color" format="color" />
    </declare-styleable>
    <declare-styleable name="CircularBar">
        <attr name="under_color" format="color" />
        <attr name="under_width" format="dimension" />
        <attr name="indicator_color" format="color" />
        <attr name="indicator_width" format="dimension" />
        <attr name="progress" format="float" />
    </declare-styleable>
    <declare-styleable name="CircularSlider">
        <attr name="under_width" />
        <attr name="under_color" />
        <attr name="indicator_width" />
        <attr name="indicator_color" />
        <attr name="cap_radius" format="dimension" />
        <attr name="cap_color" format="color" />
    </declare-styleable>
    <declare-styleable name="TextCard">
        <attr name="title" />
        <attr name="background_color" format="color" />
    </declare-styleable>

</resources>
